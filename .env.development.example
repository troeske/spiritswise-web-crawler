# Web Crawler Microservice - Development Environment
# ===================================================
# Copy this file to .env for local development

# Django Settings
SECRET_KEY=dev-secret-key-not-for-production
DEBUG=True
DJANGO_ENV=development
ALLOWED_HOSTS=localhost,127.0.0.1
LOG_LEVEL=DEBUG

# Database - SQLite for simple local development
# (No DB config needed - uses SQLite by default)

# Redis (install locally or use Docker)
REDIS_URL=redis://localhost:6379/2
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# AI Enhancement Service (run locally)
AI_ENHANCEMENT_SERVICE_URL=http://localhost:8000
AI_ENHANCEMENT_SERVICE_TOKEN=

# External APIs (optional for development)
SERPAPI_API_KEY=
SCRAPINGBEE_API_KEY=

# Sentry (optional for development)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.0
