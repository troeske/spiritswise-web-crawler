# Web Crawler Microservice Environment Variables
# ===============================================
# Copy this file to .env and update values for your environment

# Django Settings
# ----------------
SECRET_KEY=your-secret-key-change-in-production
DEBUG=True
DJANGO_ENV=development
ALLOWED_HOSTS=localhost,127.0.0.1
LOG_LEVEL=INFO

# Database Configuration (shared with AI Enhancement Service)
# -----------------------------------------------------------
DB_NAME=spiritswise
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
# -------------------
REDIS_URL=redis://localhost:6379/2
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# AI Enhancement Service Integration
# -----------------------------------
AI_ENHANCEMENT_SERVICE_URL=http://localhost:8000
AI_ENHANCEMENT_SERVICE_TOKEN=your-ai-service-token

# External API Keys
# -----------------
SERPAPI_API_KEY=your-serpapi-key
SCRAPINGBEE_API_KEY=your-scrapingbee-key

# Sentry Monitoring
# -----------------
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Crawler Configuration
# ---------------------
CRAWLER_REQUEST_TIMEOUT=30
CRAWLER_MAX_RETRIES=3
CRAWLER_RATE_LIMIT_DELAY=1.0
CRAWLER_AGE_GATE_CONTENT_THRESHOLD=500
